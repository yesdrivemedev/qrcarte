{% extends "base.html.twig" %}

{% block title %}
	-
	{{ restaurant.nom }}
{% endblock %}

{% block stylesheets %}
	<link href="{{ asset('assets/css/' ~ restaurant.css ~ '.css') }}" rel="stylesheet">
{% endblock %}


{% block body %}

	<!-- ======= Top Bar ======= -->
	<section id="topbar" class="d-flex align-items-center fixed-top topbar-transparent">
		<div class="container-fluid container-xl d-flex align-items-center justify-content-center justify-content-lg-start">
			<i class="bi bi-phone d-flex align-items-center">
				<span>{{ restaurant.telephone }}</span>
			</i>

		</div>
	</section>

	<!-- ======= Header ======= -->
	<header id="header" class="fixed-top d-flex align-items-center header-transparent">
		<div class="container-fluid container-xl d-flex align-items-center justify-content-between">

			<div class="logo me-auto">
				<h1>
					<a href="index.html">{{ restaurant.nom }}</a>
				</h1>
				<!-- Uncomment below if you prefer to use an image logo -->
				<!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
			</div>

			<nav id="navbar" class="navbar order-last order-lg-0">
				<ul>
					<li>
						<a class="nav-link scrollto active" href="#hero">ACCUEIL</a>
					</li>
					<li>
						<a class="nav-link scrollto" href="#contact">Contact</a>
					</li>
				</ul>
				<i class="bi bi-list mobile-nav-toggle"></i>
			</nav>
			<!-- .navbar -->

			<a href="#menu" class="book-a-table-btn scrollto">MENU</a>
			{% if nombre_produit > 0 %}

				<a href="{{ path('app_panier',{'slug':restaurant.slug}) }}"><img src="{{ asset('assets/img/16136464742221613658415750.png') }}" alt="" height="20px"></a>

				&nbsp;<small>
					<b>({{nombre_produit}})</b>
				</small>

				&nbsp;&nbsp;
			{% endif %}
		</div>
	</header>
	<!-- End Header -->


	<!-- ======= Hero Section ======= -->
	<section id="hero">
		<div class="hero-container">
			<div id="heroCarousel" data-bs-interval="5000" class="carousel slide carousel-fade" data-bs-ride="carousel">

				<ol class="carousel-indicators" id="hero-carousel-indicators"></ol>

				<div
					class="carousel-inner" role="listbox">

					<!-- Slide 1 -->
					<div class="carousel-item active" style="background-image: url({{ asset('assets/img/restaurants/' ~ restaurant.illustration) }});">
						<div class="carousel-container">
							<div class="carousel-content">
								<h2 class="animate__animated animate__fadeInDown">
									<span>{{ restaurant.nomcourtright }}
									</span>
									{{ restaurant.nomcourtleft }}</h2>
								<p class="animate__animated animate__fadeInUp">{{ restaurant.description }}</p>
								<div>
									<a href="#menu" class="btn-menu animate__animated animate__fadeInUp scrollto">Notre menu</a>

								</div>
							</div>
						</div>
					</div>


				</div>


			</div>
		</div>
	</section>
	<!-- End Hero -->


	<main
		id="main">


		<!-- ======= Menu Section ======= -->
		<section id="menu" class="menu">
			<div class="container">

				<div class="section-title">
					<h2>Notre
						<span>Menu</span>
					</h2>
				</div>

				<div class="row">
					<div class="col-lg-12 d-flex justify-content-center">
						<ul id="menu-flters">
							<li data-filter="*" class="filter-active">Voir tout</li>
							{% for categorie in restaurant.categories  %}
								<li data-filter=".{{categorie.filtre}}">{{categorie.nom}}</li>
							{% endfor %}

						</ul>
					</div>
				</div>

				<div class="row menu-container">

					{% for categorie in restaurant.categories  %}
						{% for plat in categorie.plats %}


							<div class="col-lg-6 menu-item {{plat.filtre}}">
								<div class="menu-content">
									<a href="{{ path('app_panier_add',{ 'slug': restaurant.slug, 'id': plat.id }) }}">
										<img src="{{ asset('assets/img/16136464742221613658415750.png') }}" alt="" height="20px">
										{{plat.nom}}</a>
									<span>{{plat.prixsimple / 100}}</span>
								</div>
								<div class="menu-ingredients">
									{{plat.description}}
								</div>
							</div>
						{% endfor %}
					{% endfor %}

				</div>

			</div>
		</section>
		<!-- End Menu Section -->


		<!-- ======= Contact Section ======= -->
		<section id="contact" class="contact">
			<div class="container">

				<div class="section-title">
					<h2>
						<span>Contactez</span>
						nous</h2>
					<p>{{ restaurant.nom }}</p>
				</div>
			</div>


			<div class="container mt-5">

				<div class="info-wrap">
					<div class="row">
						<div class="col-lg-3 col-md-6 info">
							<i class="bi bi-geo-alt"></i>
							<h4>Localisation:</h4>
							<p>{{ restaurant.adresse }}</p>
						</div>

						<div class="col-lg-3 col-md-6 info mt-4 mt-lg-0">
							<i class="bi bi-clock"></i>
							<h4>Heures d'ouverture:</h4>
							<p>Lundi-Dimanche:<br>09:00 - 22:00
							</p>
						</div>

						<div class="col-lg-3 col-md-6 info mt-4 mt-lg-0">
							<i class="bi bi-envelope"></i>
							<h4>Email:</h4>
							<p></p>
						</div>

						<div class="col-lg-3 col-md-6 info mt-4 mt-lg-0">
							<i class="bi bi-phone"></i>
							<h4>Téléphone:</h4>
							<p>{{ restaurant.telephone }}</p>
						</div>
					</div>
				</div>


			</div>
		</section>
		<!-- End Contact Section -->

	</main>
	<!-- End #main -->

	<!-- ======= Footer ======= -->
	<footer id="footer">
		<div class="container">
			<h3>{{ restaurant.nom }}</h3>
			<p>{{ restaurant.phrase1 }}|
				<i class="bi bi-geo-alt-fill"></i>
				{{ restaurant.adresse }}</p>
			<div class="social-links">
				<a href="#" class="twitter">
					<i class="bx bxl-twitter"></i>
				</a>
				<a href="#" class="facebook">
					<i class="bx bxl-facebook"></i>
				</a>
				<a href="#" class="instagram">
					<i class="bx bxl-instagram"></i>
				</a>
				<a href="#" class="google-plus">
					<i class="bx bxl-skype"></i>
				</a>
				<a href="#" class="linkedin">
					<i class="bx bxl-linkedin"></i>
				</a>
			</div>
			<div class="copyright">
				&copy; Copyright
				<strong>
					<span>Qrcartes.com</span>
				</strong>. All Rights Reserved
			</div>
			<div class="credits">
				<!-- All the links in the footer should remain intact. -->
				<!-- You can delete the links only if you purchased the pro version. -->
				<!-- Licensing information: https://bootstrapmade.com/license/ -->
				<!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/delicious-free-restaurant-bootstrap-theme/ -->
				Designed by
					<a href=""> Qrcartes.com</a>
			</div>
		</div>
	</footer>
	<!-- End Footer -->

	<a href="#" class="back-to-top d-flex align-items-center justify-content-center">
		<i class="bi bi-arrow-up-short"></i>
	</a>

{% endblock %}
